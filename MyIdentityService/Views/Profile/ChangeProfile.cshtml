@model Profile



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropper/2.3.4/cropper.min.css" />
@*<link type="text/css" href="css/my.css" rel="stylesheet" />
<link type="text/css" href="css/app.css" rel="stylesheet" />*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/0.8.1/cropper.min.js"></script>

<h1>ChangeProfile</h1>
<hr />

<form asp-controller="Profile" asp-action="ChangeProfileInfo" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label for="ImageUri">Avatara</label>

    <div class="input-group mb-3">

        <main class="page">

            <div class="box-2" id="first-container">
                <div class="result"></div>
            </div>

            <div class="box-2 img-result hide">
                <!-- result of crop -->
                <img class="cropped" name="Avatara" src="" alt="">
            </div>

            <div class="box">
                <input type="file" id="file-input">
            </div>


            <div class="box">
                <div class="options hide">
                    <!-- save btn -->
                </div>
                <button class="btn save hide btn-info">Save</button>

            </div>
        </main>
        <div class="form-group">

            <input name="Ava" type="text" class="form-control hide" id="Ava">
        </div>


    </div>


    <div class="form-group">
        <label for="name">Name</label>
        <input name="Name" type="text" class="form-control" id="name" placeholder="Enter your name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="from">From</label>
        <input name="From" type="text" class="form-control" id="from" value="@Model.From">
    </div>
    <div class="form-group">
        <label for="from">Whatsapp</label>
        <input name="Whatsapp" type="text" class="form-control" id="whatsapp" value="@Model.Whatsapp">
    </div>
    <div class="form-group">
        <label for="from">Skype</label>
        <input name="Skype" type="text" class="form-control" id="skype" value="@Model.Skype">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-info" value="Create">Save</button>
        <a class="btn  btn-outline-info " asp-controller="Profile" asp-action="UserProfile">Back</a>
    </div>
</form>

<script src="~/js/Ava.js"></script>


