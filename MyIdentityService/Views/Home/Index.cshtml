<table class="table table-striped">
    @foreach (var item in Model.Posts)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <img src="/uploads/@item.Image" class="card-img-top rounded-lg" alt="@item.Title" height="250" style="object-fit: cover">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>

                    <a asp-action="ProfileView" asp-controller="Profile" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
        @*<tr>
                <td>@item.Id</td>
