<div class="row">
    @if (Model.Profiles.Count() > 0)
    {
        @foreach (var item in Model.Profiles)
        {
            <div class="col-12 col-md-3">
                <div class="card">
                    <img src="/uploads/profiles/@item.Avatara" class="card-img-top rounded-circle" alt="@item.Name" height="250" style="object-fit: cover">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>

                        <a asp-action="ProfileView" asp-controller="Profile" asp-route-id="@item.AppUserId" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    }

    @if (Model.Posts.Count() > 0)
    {
        @foreach (var item in Model.Posts)
        {
            <div class="col-12 col-md-3">
                <div class="card">
                    <img src="/uploads/@item.Image" class="card-img-top" alt="@item.Title" height="250" style="object-fit: cover">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>

                        <a asp-action="Post" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

