@model List<Profile>
@{
    ViewData["Title"] = "Search";
}

<form class=" " asp-controller="Home" asp-action="Search">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="search">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <img src="/uploads/@item.Avatara" class="card-img-top" alt="@item.Name" height="250" style="object-fit: cover">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>

                    <a asp-action="ProfileView" asp-controller="Profile" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

